{
  "name": "chainlink-cross-chain-arbitrage-contracts",
  "version": "1.0.0",
  "description": "Cross-Chain AI Prediction Market Arbitrage Network contracts using Chainlink services",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:ccip": "hardhat test test/ccip/*.test.ts",
    "test:functions": "hardhat test test/functions/*.test.ts",
    "test:automation": "hardhat test test/automation/*.test.ts",
    "test:vrf": "hardhat test test/vrf/*.test.ts",
    "test:streams": "hardhat test test/streams/*.test.ts",
    "test:polymarket": "node scripts/test-polymarket-api.js",
    "coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy-all.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-all.ts --network sepolia",
    "deploy:base-sepolia": "hardhat run scripts/deploy-all.ts --network baseSepolia",
    "deploy:polygon-amoy": "hardhat run scripts/deploy-all.ts --network polygonAmoy",
    "deploy:arbitrum-sepolia": "hardhat run scripts/deploy-all.ts --network arbitrumSepolia",
    "deploy:avalanche-fuji": "hardhat run scripts/deploy-all.ts --network avalancheFuji",
    "deploy:arbitrage:sepolia": "hardhat run scripts/deploy-arbitrage-coordinator.ts --network sepolia",
    "deploy:arbitrage:base-sepolia": "hardhat run scripts/deploy-arbitrage-coordinator.ts --network baseSepolia",
    "deploy:arbitrage:polygon-amoy": "hardhat run scripts/deploy-arbitrage-coordinator.ts --network polygonAmoy",
    "deploy:arbitrage:arbitrum-sepolia": "hardhat run scripts/deploy-arbitrage-coordinator.ts --network arbitrumSepolia",
    "deploy:arbitrage:avalanche-fuji": "hardhat run scripts/deploy-arbitrage-coordinator.ts --network avalancheFuji",
    "deploy:prediction:sepolia": "hardhat run scripts/deploy-prediction-market.ts --network sepolia",
    "deploy:prediction:base-sepolia": "hardhat run scripts/deploy-prediction-market.ts --network baseSepolia",
    "deploy:prediction:polygon-amoy": "hardhat run scripts/deploy-prediction-market.ts --network polygonAmoy",
    "deploy:prediction:arbitrum-sepolia": "hardhat run scripts/deploy-prediction-market.ts --network arbitrumSepolia",
    "deploy:prediction:avalanche-fuji": "hardhat run scripts/deploy-prediction-market.ts --network avalancheFuji",
    "update:subscriptions": "hardhat run scripts/update-subscriptions.ts --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:base-sepolia": "hardhat verify --network baseSepolia",
    "verify:polygon-amoy": "hardhat verify --network polygonAmoy",
    "verify:arbitrum-sepolia": "hardhat verify --network arbitrumSepolia",
    "verify:avalanche-fuji": "hardhat verify --network avalancheFuji"
  },
  "keywords": [
    "chainlink",
    "ccip",
    "arbitrage",
    "prediction-markets",
    "cross-chain",
    "ai"
  ],
  "author": "Cross-Chain Arbitrage Team",
  "license": "MIT",
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chainlink/contracts-ccip": "^1.6.0",
    "@openzeppelin/contracts": "4.9.6",
    "axios": "^1.7.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "hardhat": "^2.24.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "chai": "^4.5.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.3"
  }
}
